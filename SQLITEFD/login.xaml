<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SQLITEFD.login">
    <ContentPage.Content>
        <StackLayout Padding="30" Spacing="30">
            <Label Text="Ventana de login" FontSize="Medium" HorizontalTextAlignment="Center"/>

            <Entry x:Name="txtUsuario" Placeholder="Ingrese el usuario"/>
            <Entry x:Name="txtClave" Placeholder="Ingrese la contraseña" IsPassword="True"/>
            <Button x:Name="btnIniciar" Text="Iniciar sesión" BackgroundColor="DarkCyan" TextColor="White" Clicked="btnIniciar_Clicked"/>
            <Button x:Name="btnregistrar" Text="Registrar" Clicked="btnregistrar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>